<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@drawable/green_gradient"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@drawable/white_screen">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="Log In"
                android:textAlignment="center"
                android:id="@+id/tit"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp"
                android:transitionName="title"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="108dp"
                android:hint="Fullname"
                android:textColorHint="#a6bcd0"
                android:paddingLeft="15dp"
                android:background="@drawable/inputs"
                android:transitionName="email"
                android:drawableLeft="@drawable/acc"
                android:drawablePadding="12dp"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:hint="Mobile"
                android:textColorHint="#a6bcd0"
                android:paddingLeft="15dp"
                android:background="@drawable/inputs"
                android:transitionName="email"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="12dp"
                android:inputType="number"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Login with Email?"
                android:textAlignment="center"
                android:textColor="#a6bcd0"
                android:textSize="16dp"
                android:id="@+id/lemail"
                android:transitionName="forgot"
                android:gravity="center_horizontal" />



            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/buttons"
                android:layout_marginTop="70dp"
                android:text="send otp"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:paddingLeft="80dp"
                android:drawablePadding="-90dp"
                android:transitionName="otp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OR LOGIN USING"
                android:textSize="14dp"
                android:textColor="#a6bcd0"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/google"
                android:background="@drawable/ic_google"/>



        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:text="By Signing up you accept to our Terms and Conditions Read our Privacy policy"
            android:textAlignment="center"
            android:textSize="12dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>