<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/back"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingRight="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dukhana"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Account"
        android:textSize="20dp"
        android:textColor="#4c4c4c"
        android:textAlignment="center"

        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:background="#f0f0f0"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/pink_orange">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user"
                android:transitionName="user"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/real"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="your name"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_bold"
                android:id="@+id/name"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/email"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/mobile"
                    />
            </LinearLayout>
       <!--     <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit1"
                android:id="@+id/edit"/>-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Your address"
                android:id="@+id/address"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/change_button"
                android:text="change"
                android:textColor="#f96607"
                android:id="@+id/change"
                android:transitionName="change"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/orders">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_order"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="My Orders"
                android:textColor="#747474"
                android:textSize="18dp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat"
                android:id="@+id/myorders"
                android:transitionName="myorders"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:id="@+id/rewards"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_reward"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="My Rewards"
                android:textColor="#747474"
                android:textSize="18dp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/ratings">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_conversation"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="My Ratings &amp; Reviews"
                android:textColor="#747474"
                android:textSize="18dp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/daddress">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pin"
                android:layout_marginLeft="20dp"
               />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="My Delivery Address"
                android:textColor="#747474"
                android:textSize="18dp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat"
                android:id="@+id/delivery"
                android:transitionName="delivery"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/changemobile">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_smartphone"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Add Mobile Number"
                android:textColor="#747474"
                android:textSize="18dp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat"
                android:transitionName="delivery"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/changepass">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_password"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Change Password"
                android:textColor="#747474"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                app:fontFamily="@font/montserrat"
                android:transitionName="delivery"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/logout"
            android:clickable="true">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logout"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Logout"
                android:textColor="#747474"
                android:textSize="18dp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat"
                android:id="@+id/logout1"
                android:transitionName="email"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

    </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>