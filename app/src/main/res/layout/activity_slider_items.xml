<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/back"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingRight="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dukhana"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cart"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/cart"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:text="1"
                    android:layout_alignRight="@+id/cart"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/ccount"/>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#dbdbdb"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/cardv"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100off"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="3dp"
                            android:background="@color/colorPrimary"
                            android:textColor="#FFFFFF"
                            android:padding="5dp"
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat"
                            android:id="@+id/ddiscount"/>
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="70dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/surf"
                            android:id="@+id/image"
                            android:transitionName="image"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:text="Surf Excel Matic Front Load Liquid:2 Litres"
                                android:textColor="#000000"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat"
                                android:id="@+id/name"
                                android:transitionName="title"/>
                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="out of stock"
                                android:layout_marginLeft="1dp"
                                android:background="@drawable/pink_oval"
                                android:textColor="#FFFFFF"
                                android:padding="5dp"
                                android:textSize="10dp"
                                android:paddingLeft="2dp"
                                android:fontFamily="@font/montserrat"
                                android:id="@+id/outst"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="\u20B9 390.00"
                                android:layout_marginRight="10dp"
                                android:id="@+id/mrp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="#D51717"
                                android:text=" \u20B9 500.00"
                                android:id="@+id/cost"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                >
                                <LinearLayout
                                    android:id="@+id/lquan"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/green_stroke"
                                    android:orientation="horizontal"
                                    android:paddingRight="5dp"
                                    android:layout_marginTop="5dp"
                                    >
                                    <TextView
                                        android:id="@+id/quan"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.7"
                                        android:layout_height="wrap_content"
                                        android:text="100gms"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_marginTop="6dp"
                                        android:layout_marginLeft="10dp"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_down_arrow"
                                        android:layout_marginTop="9dp"
                                        android:layout_marginLeft="6dp"
                                        android:layout_marginRight="2dp"/>


                                </LinearLayout>



                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/green_stroke"
                                    android:id="@+id/add"
                                    >

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.75"
                                        android:layout_height="match_parent"
                                        android:text="Add"
                                        android:textAlignment="center"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#0ec476"
                                        android:textSize="14dp"
                                        android:gravity="center_horizontal"
                                        android:id="@+id/add1"/>
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.25"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_plus"
                                        android:background="@drawable/green_oval"
                                        android:id="@+id/add2"
                                        />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/buttons"
                                    android:id="@+id/plusmi"
                                    android:layout_marginTop="5dp"
                                    android:visibility="gone"
                                    >
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.2"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_minus"
                                        android:layout_marginLeft="3dp"
                                        android:layout_marginTop="3dp"
                                        android:textColor="#ffffff"
                                        android:id="@+id/minus"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.6"
                                        android:layout_height="match_parent"
                                        android:text="1"
                                        android:background="#FFFFFF"
                                        android:textColor="#000000"
                                        android:textSize="18dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginBottom="1dp"
                                        android:textAlignment="center"
                                        android:id="@+id/count"
                                        android:gravity="center_horizontal" />
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.2"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_plus"
                                        android:textColor="#ffffff"
                                        android:layout_marginRight="3dp"
                                        android:layout_marginTop="3dp"
                                        android:id="@+id/plus"/>
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>